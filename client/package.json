{
  "name": "vscode-dasm",
  "displayName": "Dasm macro assembler for VSCode",
  "description": "Develop and run Atari games from inside Visual Studio Code",
  "version": "2.0.1",
  "author": "Zeh Fernando",
  "publisher": "zehfernando",
  "preview": true,
  "license": "GPL-2.0",
  "engines": {
    "vscode": "^1.6.0"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#293134",
    "theme": "dark"
  },
  "homepage": "https://github.com/zeh/vscode-dasm/tree/master/client",
  "bugs": {
    "url": "https://github.com/zeh/vscode-dasm/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zeh/vscode-dasm.git"
  },
  "categories": [
    "Languages",
    "Snippets",
    "Linters",
    "Debuggers",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:dasm",
    "onCommand:vscode-dasm.openToTheSide",
    "onCommand:extension.vscode-dasm.getProgramName",
		"onCommand:extension.vscode-dasm.provideInitialConfigurations"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "breakpoints": [
      {
        "language": "dasm"
      }
    ],
    "debuggers": [
			{
				"type": "atari",
				"label": "Atari Debug",

				"program": "./out/src/debugAtari.js",
				"runtime": "node",

				"variables": {
					"AskForProgramName": "extension.vscode-dasm.getProgramName"
				},

				"configurationSnippets": [
					{
						"label": "Atari Debug: Launch",
						"description": "A new configuration for launching an Atari debug program",
						"body": {
							"type": "atari",
							"request": "launch",
							"name": "${2:Launch Program}",
							"program": "^\"\\${workspaceRoot}/${1:Program}\""
						}
					}
				],

				"configurationAttributes": {
					"launch": {
						"required": [ "program" ],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceRoot}/${command.AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": "extension.vscode-dasm.provideInitialConfigurations"
			}
		],
    "configuration": {
      "type": "object",
      "title": "VSCode-dasm configuration",
      "properties": {
        "vscode-dasm.preferUppercase": {
          "type": "array",
          "default": [
            "all"
          ],
          "description": "Controls which language tokens should be uppercase (instructions|symbols|registers|pseudoops|all)."
        },
        "vscode-dasm.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the dasm language server service."
        }
      }
    },
    "languages": [
      {
        "id": "dasm",
        "aliases": [
          "Dasm",
          "Assembly",
          "6502"
        ],
        "extensions": [
          ".dasm",
          ".asm",
          ".a",
          ".h"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dasm",
        "scopeName": "source.asm.dasm",
        "path": "./syntaxes/dasm.json"
      }
    ],
    "commands": [
      {
        "command": "vscode-dasm.openToTheSide",
        "title": "Open Atari emulator to the side"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "bin": {
    "tslint": "./node_modules/tslint/bin/tslint"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.37",
    "@types/node": "^7.0.0",
    "mocha": "^3.2.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.5",
    "vscode": "^1.0.3",
    "vscode-debugadapter-testsupport": "^1.16.0"
  },
  "dependencies": {
    "dasm": "^4.1.0",
    "path": "^0.12.7",
    "vscode-debugadapter": "^1.16.0",
    "vscode-debugprotocol": "^1.16.0",
    "vscode-languageclient": "^3.0.3"
  }
}